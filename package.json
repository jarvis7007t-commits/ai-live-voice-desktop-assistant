{
  "name": "gemini-live-vision-desktop",
  "private": true,
  "version": "1.0.0",
  "description": "Desktop AI Assistant with Live Vision & Voice",
  "author": "AI Developer",
  "main": "electron.js",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "tsc --noEmit",
    "electron:dev": "ELECTRON_START_URL=http://localhost:3000 electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@google/genai": "^1.38.0",
    "@tailwindcss/vite": "^4.2.1",
    "lucide-react": "^0.575.0",
    "motion": "^12.34.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwindcss": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  },
  "build": {
    "appId": "com.gemini.livevision",
    "productName": "My Floating App",
    "directories": {
      "output": "dist-electron"
    },
    "win": {
      "target": "portable",
      "icon": "icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "My Floating App"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "package.json",
      "icon.ico"
    ],
    "asar": true
  }
}
